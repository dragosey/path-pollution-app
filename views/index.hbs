}).addTo(map);
    {{{ leaflet_points }}}
    function onMarkerClick(e) {
        var id = this.options.id;
        $.ajax({
          type: 'GET',
          cache: false,
          contentType: 'application/json',
          datatype: "json",
          url: '/api/getPointData?id='+id,
              success: function (result) {
                console.log("Here are the response in json format: " + result);
                $('.temperature h1').html(result.temperature);
                $('.humidity h1').html(result.humidity);
                $('.co').addClass(result.color_co).removeClass('bg-not-set');
                $('.co h1').html(result.co);
                $('.no2').addClass(result.color_no2).removeClass('bg-not-set');;
                $('.no2 h1').html(result.no2);
                $('.pm1').addClass(result.color_pm1).removeClass('bg-not-set');;
                $('.pm1 h1').html(result.pm1);
                $('.pm25').addClass(result.color_pm25).removeClass('bg-not-set');;
                $('.pm25 h1').html(result.pm25);
                $('.pm10').addClass(result.color_pm10).removeClass('bg-not-set');;
                $('.pm10 h1').html(result.pm10);
              }
          });
    }
 </script>